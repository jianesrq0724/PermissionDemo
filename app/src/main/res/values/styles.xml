<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--自定义dialog主题-->
    <style name="CustomDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/transparent</item>//这句话不能少，否则dialog会出现黑色边框
    </style>

    <!--toolBar的主题-->
    <style name="ToolbarTheme" parent="@style/AppTheme">
        <item name="android:actionMenuTextColor">@color/text_black</item>
        <item name="android:textSize">16sp</item>
    </style>


    <!-- 水平分割线的样式 -->
    <style name="horizontal_line_style">
        <item name="android:background">@color/line_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
    </style>

</resources>
